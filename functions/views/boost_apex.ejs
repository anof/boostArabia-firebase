<!-- ##### Post Details Area Start ##### -->
<section class="post-news-area section-padding-0-0">
    <div id="contentContainer" class="container">
        <div class="row justify-content-center mt-30 mb-30">
            <!-- Post Details Content Area -->
            <div class="col-lg-8">
                <div class="post-details-content">
                    <!-- Start Boost Form -->
                    <div class="container">
                        <div class='container checkout hidden'>
                            <div class="checkout-content">
                                <h2>Choose Your BOOSTER</h2>
                                <div class="container-fluid">
                                    <div id="myCarousel" class="carousel slide" data-ride="carousel">
                                        <div class="carousel-inner row w-100 mx-auto">
                                            <div class="carousel-item col-md-4 active">
                                                <div class="card">
                                                    <img class="card-img-top" src="./img/bg-img/header_apex.png"
                                                        alt="Card image cap">
                                                    <div class="card-body">
                                                        <h4 class="card-title">temp1</h4>
                                                        <p class="card-text">
                                                            test1
                                                        </p>
                                                        <button class="btn btn-primary">Choose</button>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="carousel-item col-md-4">
                                                <div class="card">
                                                    <img class="card-img-top" src="./img/bg-img/header_apex.png"
                                                        alt="Card image cap">
                                                    <div class="card-body">
                                                        <h4 class="card-title">temp2</h4>
                                                        <p class="card-text">
                                                            test2
                                                        </p>
                                                        <button class="btn btn-primary">Choose</button>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="carousel-item col-md-4">
                                                <div class="card">
                                                    <img class="card-img-top" src="./img/bg-img/header_apex.png"
                                                        alt="Card image cap">
                                                    <div class="card-body">
                                                        <h4 class="card-title">temp3</h4>
                                                        <p class="card-text">
                                                            test3
                                                        </p>
                                                        <button class="btn btn-primary">Choose</button>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="carousel-item col-md-4">
                                                <div class="card">
                                                    <img class="card-img-top" src="./img/bg-img/header_apex.png"
                                                        alt="Card image cap">
                                                    <div class="card-body">
                                                        <h4 class="card-title">temp4</h4>
                                                        <p class="card-text">
                                                            test4
                                                        </p>
                                                        <button class="btn btn-primary">Choose</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="container">
                                            <div class="row">
                                                <div class="col-12 text-center mt-4">
                                                    <a class="btn btn-outline-secondary slider-colors mx-1 prev"
                                                        href="javascript:void(0)" title="Previous">
                                                        <i class="fa fa-lg fa-chevron-left"></i>
                                                    </a>
                                                    <a class="btn btn-outline-secondary slider-colors mx-1 next"
                                                        href="javascript:void(0)" title="Next">
                                                        <i class="fa fa-lg fa-chevron-right"></i>
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <button class="btn checkout-button">Checkout With Paypal</button>
                            </div>

                        </div>
                        <div class="boost_form apex_colors">
                            <div class="justify-content-center">
                                <img src="img/bg-img/header_apex.png" width="100%" height="50%" />
                            </div>

                            <div class="boost_nav_bar_img" style="background-image:url('img/bg-img/nav_apex.png');">
                                <div class="col-12">
                                    <ul class="nav nav-tabs " id="myTab" role="tablist">
                                        <li class="nav-item">
                                            <a class="nav-link active show" id="levels-tab" data-toggle="tab"
                                                href="#levels" role="tab" aria-controls="levels"
                                                aria-selected="true">Levels</a>
                                        </li>

                                        <li class="nav-item">
                                            <a class="nav-link" id="wins-tab" data-toggle="tab" href="#wins" role="tab"
                                                aria-controls="wins" aria-selected="false">Wins</a>
                                        </li>

                                        <li class="nav-item">
                                            <a class="nav-link" id="kills-tab" data-toggle="tab" href="#kills"
                                                role="tab" aria-controls="kills" aria-selected="false">Kills</a>
                                        </li>

                                    </ul>
                                </div>
                            </div>

                            <!-- Content -->
                            <div class="content boost_content_img"
                                style="background-image:url('img/bg-img/apex_boost_wallpaper.png');">
                                <div class="form_content  d-flex flex-column justify-content-center ">
                                    <form action="" onsubmit="return false;" class="tab-content">
                                        <!-- Battle Pass -->
                                        <div class="tab-pane fade show active" id="levels" role="tabpanel"
                                            aria-labelledby="levels-tab">
                                            <div class="p-2">
                                                <div class="form-text">
                                                    Platform
                                                </div>
                                                <div class="p-2 col-md-6 mx-auto">
                                                    <select class="form-select">
                                                        <option>PS4</option>
                                                        <option>Xbox</option>
                                                        <option>PC</option>
                                                    </select>
                                                </div>
                                            </div>

                                            <div class="p-2">
                                                <div class="form-text">
                                                    Number Of Levels
                                                </div>

                                                <div class="p-2 col-md-6 mx-auto">
                                                    <input id="apex_levels" class="custom_number_slider" type="number"
                                                        value="1" min="1" max="100" step="1" />
                                                </div>

                                            </div>
                                        </div>

                                        <!-- wins -->
                                        <div class="tab-pane fade" id="wins" role="tabpanel" aria-labelledby="wins-tab">
                                            <div class="p-2">
                                                <div class="form-text">
                                                    Platform
                                                </div>
                                                <div class="p-2 col-md-6 mx-auto">
                                                    <select class="form-select">
                                                        <option>PS4</option>
                                                        <option>Xbox</option>
                                                        <option>PC</option>
                                                    </select>
                                                </div>
                                            </div>

                                            <div class="p-2">
                                                <div class="form-text">
                                                    Queue Type
                                                </div>
                                                <div class="p-2 col-md-6 mx-auto">
                                                    <select class="form-select">
                                                        <option>Squad</option>
                                                    </select>
                                                </div>
                                            </div>

                                            <div class="p-2">
                                                <div class="form-text">
                                                    wins
                                                </div>

                                                <div class="p-2 col-md-6 mx-auto">
                                                    <input id="apex_wins" class="custom_number_slider" type="number"
                                                        value="1" min="1" max="100" step="1" />
                                                </div>

                                            </div>
                                        </div>

                                        <!-- Kills -->
                                        <div class="tab-pane fade" id="kills" role="tabpanel"
                                            aria-labelledby="kills-tab">
                                            <div class="p-2">
                                                <div class="form-text">
                                                    Platform
                                                </div>
                                                <div class="p-2 col-md-6 mx-auto">
                                                    <select class="form-select">
                                                        <option>PS4</option>
                                                        <option>Xbox</option>
                                                        <option>PC</option>
                                                    </select>
                                                </div>
                                            </div>

                                            <div class="p-2">
                                                <div class="form-text">
                                                    Queue Type
                                                </div>
                                                <div class="p-2 col-md-6 mx-auto">
                                                    <select class="form-select">
                                                        <option>Squad</option>
                                                    </select>
                                                </div>
                                            </div>

                                            <div class="p-2">
                                                <div class="form-text" id="kill_count">
                                                    Kill Count
                                                </div>

                                                <div class="p-2 col-md-6 mx-auto">
                                                    <input id="apex_kills" class="custom_number_slider" type="number"
                                                        value="1" min="1" max="100" step="1" />
                                                </div>

                                            </div>
                                        </div>

                                        <div class="p-2">
                                            <h2 class="form-text">
                                                Price
                                            </h2>
                                            <div class="form-price apex_price">
                                                $<span id="price">0.00</span>
                                            </div>
                                        </div>

                                        <div class="p-2 mt-50 col-md-6 mx-auto">
                                            <button class="btn egames-btn w-100" onclick="checkout();">
                                                Check Out
                                            </button>
                                        </div>

                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- End Boost Form -->

                </div>
            </div>

            <!-- Sidebar Widget -->
            <div class="col">
                <!-- Single Widget Area -->
                <div class="d-flex justify-content-center mt-1">
                    <div class="container">
                        <!-- Start Widgets area -->
                        <%- include('reviews_widget') %>
                        <!-- End Widgets area -->
                    </div>
                </div>
            </div>
        </div>


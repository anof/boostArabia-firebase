<%- include('header') %>

<!-- ##### Login Area Start ##### -->
<section class="form-text bg-img bg-pattern bg-fixed pt-5 pb-5"
    style="background-image: url(img/bg-img/5.jpg);height: -webkit-fill-available;">
    <div class="container">
        <h2 class="section-title mb-50 col-sm-7 mx-auto"><strong>Log In</strong></h2>
        <!-- Start Error -->
        <div id="login_errors" class="alert alert-danger col-sm-6 mx-auto hidden">
            
        </div>
        <!-- End Error -->
        <form id="login_form" action="#" method="">
            <div class="form-group col-sm-7 mx-auto">
                <label for="email">Email</label>
                <input name="email" type="email" class="form-control" id="email" aria-describedby="emailHelp"
                    placeholder="Enter Email" required>
            </div>

            <div class="form-group col-sm-7 mx-auto">
                <label for="password">Password</label>
                <input name="password" type="password" class="form-control" id="password" placeholder="Password" required>
            </div>

            
            <div class="form-group col-sm-7 mx-auto d-flex justify-content-between align-items-center">
                <a class="reset_password" href="/reset_password">
                    Forgot password?
                </a>
            </div>

            <div class="form-group col-sm-7 mx-auto d-flex justify-content-between align-items-center">
                <button id="login_button" onclick="login();" type="" class="btn egames-btn">Log In</button>
                <span>OR</span>
                <a href="register"><button type="button" class="btn login_btn">Sign Up</button></a>
            </div>



        </form>
    </div>
</section>
<!-- ##### Login Area End ##### -->

<!-- ##### Footer Area Start ##### -->
<% include footer.ejs %>
<!-- ##### Footer Area End ##### -->

